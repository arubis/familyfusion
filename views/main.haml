.container
  .row
    .col-md-6.col-md-offset-3
      %h1 Placeholder
      %h2 Want me to call you?
      %form{role: 'form', action: '/call', method: 'post'}
        .form-group
          %input.form-control.input-lg{type: "text", id: "number", name: "number", placeholder: "888-555-5555"}
        %button.btn.btn-primary.btn-lg{type: "submit"} Ring It

      %p.smaller= "Request contains:"
      %pre
        = request.inspect